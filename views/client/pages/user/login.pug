extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5.page
    .col-sm-12.login-page
      .col-sm-5.main-login
        .col-sm-12
          h1(class="text-center my-5") Đăng nhập tài khoản
          form(
            action="/user/login"
            method="POST"
          )
            div(class="form-group")
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              )
            div(class="form-group")
              label(for="password") Mật khẩu
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              )
            .col-sm-12.d-flex.align-items-center.justify-content-between
              div(class="form-group")
                button(
                  type="submit"
                  class="btn btn-primary btn-block rounded-pill"
                ) Đăng nhập
              a(href="/user/password/forgot") Quên mật khẩu?
      .col-sm-7
        .background-login
          h3(class="title-image") WELCOME BACK
          h3(class="title-question") Are you new here?
          button#registerButton.loginCustom-button
            i(class="fa-solid fa-arrow-left")
            |       Đăng ký
          img(src="../images/background.png", alt="", class="login-image")
  script.
    document.addEventListener('DOMContentLoaded', function () {
      const registerButton = document.getElementById('registerButton');

      if (registerButton) {
        registerButton.addEventListener('click', function () {
          window.location.href = '/user/register';
        });
      }
    });