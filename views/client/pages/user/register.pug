extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5.page-register
    .col-sm-12.register-page
      .col-sm-5.main-register
        .col-sm-12
          h1(class="text-center") Đăng ký tài khoản
          form(
            action="/user/register"
            method="POST"
          )
            div(class="form-group")
              label(for="fullName") Họ và tên
              input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
              )
            div(class="form-group")
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              )
            div(class="form-group")
              label(for="password") Mật khẩu
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              )
            div(class="form-group")
              button(
                type="submit"
                class="btn btn-primary btn-block rounded-pill"
              ) Đăng ký
      .col-sm-7.background-register
          h3(class="title-image") WELCOME BACK
          h3(class="title-question") Already have an account?
          button#registerButton.loginCustom-button
            i(class="fa-solid fa-arrow-left")
            |    Đăng nhập
          img(src="../images/background.png", alt="", class="login-image")
  script.
    document.addEventListener('DOMContentLoaded', function () {
      const registerButton = document.getElementById('registerButton');

      if (registerButton) {
        registerButton.addEventListener('click', function () {
          window.location.href = '/user/login';
        });
      }
    });